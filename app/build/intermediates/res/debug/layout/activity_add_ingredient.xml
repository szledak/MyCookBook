                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Jednostka:"
                android:id="@+id/textView2"
                android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_below="@+id/textView"
                android:layout_marginTop="20dp" android:textColor="#330000" android:layout_marginLeft="10dp"/>
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:layout_alignBottom="@+id/textView2" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_toRightOf="@+id/textView2"
                android:layout_below="@+id/editText3" android:layout_marginLeft="20dp"
                android:layout_marginRight="150dp"/>
    </RelativeLayout>
    <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_action_new1"
            android:id="@+id/im_view_add"
            android:layout_gravity="center_horizontal"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="369dp"
            android:id="@+id/listView2"/>
