<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >

        <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/name"
                android:singleLine="true"
                android:maxLength="20"
                android:inputType="textCapSentences"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/editText4" android:layout_alignEnd="@+id/editText4"
                android:layout_alignParentRight="true" android:layout_toRightOf="@+id/textv_name"
                android:layout_toEndOf="@+id/textv_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ilość: "
                android:id="@+id/textv_kcal"

                android:layout_alignParentBottom="false" android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true" android:layout_marginTop="20dp"
                android:layout_below="@+id/textv_name"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nazwa: "
                android:id="@+id/textv_name"
                android:layout_alignBottom="@+id/editText2" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText4" android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/textv_name" android:hint="[g]" android:maxLength="4"
                    android:layout_marginRight="150dp"/>


            <LinearLayout
                android:id="@+id/layout_submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="2" >

            <Button
                    android:id="@+id/button_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/add" />

            <Button
                    android:id="@+id/button_reset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/reset" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView><!-- From: file:/D:/Programowanie/Android/AndroidStudioProjects/MyCookBook/app/src/main/res/layout/fragment_calc_edit.xml -->