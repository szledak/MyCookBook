<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.androidhive.actionbar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- <uses-feature android:name="android.hardware.camera" -->
    <!-- android:required="true" /> -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
        <activity
            android:name="com.example.MyCookBook.MyActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- recipes activity -->
        <activity
            android:name="com.example.MyCookBook.RecipesActivity"
            android:label="@string/recipes" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />

            <intent-filter>
                <action android:name="com.example.MyCookBook.RecipesActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- add recipe activity -->
        <activity
            android:name="com.example.MyCookBook.AddRecipeActivity"
            android:label="@string/add_recipes"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />

            <intent-filter>
                <action android:name="com.example.MyCookBook.AddRecipeActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- add ingredient activity -->
        <activity
            android:name="com.example.MyCookBook.AddIngredientActivity"
            android:label="@string/add_recipes"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />

            <intent-filter>
                <action android:name="com.example.MyCookBook.AddIngredientActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- show recipe activity -->
        <activity
            android:name="com.example.MyCookBook.ShowRecipeActivity"
            android:label="@string/recipes"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />

            <intent-filter>
                <action android:name="com.example.MyCookBook.ShowRecipeActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- favourites activity -->
        <activity
            android:name="com.example.MyCookBook.FavouritesActivity"
            android:label="@string/favourites" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />

            <intent-filter>
                <action android:name="com.example.MyCookBook.FavouritesActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- products activity -->
        <activity
            android:name="com.example.MyCookBook.ProductsActivity"
            android:label="@string/products" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />

            <intent-filter>
                <action android:name="com.example.MyCookBook.ProductsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- calculator activity -->
        <activity
            android:name="com.example.MyCookBook.CalculatorActivity"
            android:label="@string/calculator"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />

            <intent-filter>
                <action android:name="com.example.MyCookBook.CalculatorActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- search recipe activity -->
        <activity
            android:name="com.example.MyCookBook.SearchRecipeActivity"
            android:label="@string/search_recipes"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />

            <intent-filter>
                <action android:name="com.example.MyCookBook.SearchRecipeActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
